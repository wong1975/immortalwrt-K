# 📌 **压缩工具**
CONFIG_PACKAGE_unzip=y
# 适用于解压 ZIP 文件

# 📌 **磁盘管理**
CONFIG_PACKAGE_blkid=y
CONFIG_PACKAGE_cfdisk=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_mdadm=y
CONFIG_PACKAGE_parted=y
CONFIG_PARTED_READLINE=y
# 适用于存储设备管理

# 📌 **文件系统支持**
CONFIG_PACKAGE_attr=y
CONFIG_PACKAGE_btrfs-progs=y
CONFIG_PACKAGE_dosfstools=y
CONFIG_PACKAGE_exfat-fsck=y
CONFIG_PACKAGE_exfat-mkfs=y
CONFIG_PACKAGE_fuse-utils=y
CONFIG_PACKAGE_ntfs-3g=y #允许 Linux 读写 NTFS 文件系统
CONFIG_PACKAGE_NTFS-3G_HAS_PROBE=y #检测 NTFS 分区的状态
CONFIG_PACKAGE_ntfs-3g-utils=y #ntfs-3g 的 工具集
CONFIG_PACKAGE_sysfsutils=y
# 适用于外部存储设备挂载

# 📌 **Shell 和终端**
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_ttyd=y
# 适用于命令行交互

# 📌 **系统工具**
CONFIG_PACKAGE_bc=y
CONFIG_PACKAGE_coremark=y
CONFIG_COREMARK_OPTIMIZE_O3=y
CONFIG_COREMARK_ENABLE_MULTITHREADING=y
CONFIG_COREMARK_NUMBER_OF_THREADS=128
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-base64=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_dbus=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_jq=y
CONFIG_PACKAGE_lm-sensors=y
CONFIG_PACKAGE_openssl-util=y

# 📌 **硬件与设备管理**
CONFIG_PACKAGE_pciids=y
CONFIG_PACKAGE_pciutils=y
CONFIG_PACKAGE_smartmontools=y
CONFIG_PACKAGE_smartmontools-drivedb=y

# 📌 **优化与网络支持**
CONFIG_PACKAGE_ucode-mod-html=y
CONFIG_PACKAGE_ucode-mod-lua=y

